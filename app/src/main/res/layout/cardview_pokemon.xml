<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pokemon_sprite_cv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/pokemon_name_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/pokemon_sprite_cv"
            android:layout_alignRight="@id/pokemon_sprite_cv"
            android:layout_alignBottom="@id/pokemon_sprite_cv"
            android:layout_margin="16dp"

            android:background="#65000000"
            android:gravity="end"

            android:lines="1"
            android:padding="8dp"

            android:text="@string/pokemon_name"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/pokemon_sndtype_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/pokemon_sprite_cv"
            android:layout_alignLeft="@id/pokemon_sprite_cv"
            android:layout_alignTop="@id/pokemon_sprite_cv"

            android:layout_margin="16dp"
            android:background="#65000000"

            android:gravity="end"
            android:padding="8dp"

            android:text="@string/fsttype"
            android:textColor="#fff"

            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/data_container_ll_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pokemon_sprite_cv"

            android:orientation="vertical">

            <TextView
                android:id="@+id/pokemon_url_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:lines="3"
                android:text="@string/lorem" />

            <TextView
                android:id="@+id/pokemon_fsttype_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="end"
                android:text="@string/fsttype" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>